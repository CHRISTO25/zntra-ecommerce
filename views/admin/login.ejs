    <!-- Template CSS -->
    <link href="static/admin/assets/css/main.css" rel="stylesheet" type="text/css" />
    <style>
        /* Add some CSS for colorful inputs */
        .colorful-input {
          background-color: #f3f3f3;
          border: none;
          border-radius: 5px;
          padding: 10px;
          margin-bottom: 10px;
          box-shadow: none;
        }
      </style>
</head>

<body>
    <main>
        
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Sign in</h4>
                    <form action="/adminlogin" method="post" id="loginForm">
                        <div class="mb-3">
                          <input class="form-control" placeholder="Username or email" type="email" name="name" id="emailInput">
                        </div>
                        <!-- form-group// -->
                        <div class="mb-3">
                          <input class="form-control" placeholder="Password" type="password" name="pass" id="passwordInput">
                        </div>
                        <div class="mb-3">
                          <p style="color: red;"><%=message%></p>
                        </div>
                        <!-- form-group// -->
                        <div class="mb-4">
                          <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div>
                        <!-- form-group// -->
                      </form>
                      
                      <!-- Include SweetAlert library -->
                      <!-- <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> -->
                      
                      <script>
                        // Validate form inputs
                        document.getElementById('loginForm').addEventListener('submit', function(event) {
                          event.preventDefault(); // Prevent form submission
                      
                          var email = document.getElementById('emailInput').value;
                          var password = document.getElementById('passwordInput').value;
                      
                          // Perform validation
                          if (email.trim() === '' || password.trim() === '') {
                            // Show SweetAlert error message
                            swal("Error", "Please enter both email and password", "error");
                          } else {
                            // Submit the form
                            this.submit();
                          }
                        });
                      
                        // Make the form colorful
                        document.addEventListener('DOMContentLoaded', function() {
                          var form = document.getElementById('loginForm');
                          var formElements = form.elements;
                      
                          // Loop through form elements and add color
                          for (var i = 0; i < formElements.length; i++) {
                            var element = formElements[i];
                            if (element.type !== 'submit') {
                              element.classList.add('colorful-input');
                            }
                          }
                        });
                      </script>
                   
               
                </div>
            </div>
        </section>
