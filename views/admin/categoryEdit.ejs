<body>
    <%-include('nav')-%>
    <main class="main-wrap">
       
        <section class="content-main">
            <form action="/categoriesDataedit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Add New Product</h2>
                        <div>
                            <a href="/categories" class="btn btn-light rounded font-sm mr-5 text-body hover-up" >View categories</a>
                            <button class="btn btn-md rounded font-sm hover-up" type="submit">Save</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category Name</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="name" id="product_name" value="<%=data.cat_name%>">
                                    <input type="hidden" placeholder="Type here" class="form-control" name="id" id="product_name" value="<%=data._id%>">

                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Category Description</label>
                                    <textarea placeholder="Type here" class="form-control" name="description"  rows="4" ><%=data.cat_description%></textarea>
                                </div>
                            </form>
                        </div>
                    </div><!-- card end// -->
                    
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img style="height: 100px!important; width: 200px !important;" src="static/uploads/<%=data.cat_image%>" alt="">
                                <input class="form-control" name="image" type="file">
                            </div>
                        </div>
                    </div> <!-- card end// -->
                    
                </div>
            </div>
        </section> 

        
