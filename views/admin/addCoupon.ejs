                                    <label for="ex_date" class="form-label">Coupon Expire Date</label>
                                    <input type="date" placeholder="Type here" class="form-control" name="ex_date" id="ex_date">
                                </div>
                                <br>
                                <div class="input-upload">
                                    <label for="min_amount" class="form-label">Coupon Minimum Amount</label>
                                    <input type="number" placeholder="Type here" class="form-control" name="min_amount" id="min_amount">
                                </div>
                            </div>
                        </div> <!-- card end// -->
                    </div>
                </div>
            </form>
            
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                function validateForm(event) {
                    event.preventDefault(); // Prevent form submission
            
                    // Get form fields
                    const couponName = document.querySelector('#name').value;
                    const couponCode = document.querySelector('#code').value;
                    const couponAmount = document.querySelector('#amount').value;
                    const couponExpireDate = document.querySelector('#ex_date').value;
                    const couponMinAmount = document.querySelector('#min_amount').value;
            
                    // Validate fields
                    if (!couponName || !couponCode || !couponAmount || !couponExpireDate || !couponMinAmount) {
                        // Display SweetAlert error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Validation Error',
                            text: 'Please fill in all fields',
                            confirmButtonColor: 'red'
                        });
                        return;
                    }
            
                    // Perform additional validations if needed
            
                    // Submit the form if all validations pass
                    event.target.submit();
                }
            </script>
            
