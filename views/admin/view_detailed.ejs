                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            const itemActions = document.querySelectorAll(".item-action");
                    
                            itemActions.forEach(action => {
                                action.addEventListener("click", function (event) {
                                    event.preventDefault();
                    
                                    const link = this.getAttribute("data-href");
                    
                                    Swal.fire({
                                        title: 'Are you sure?',
                                        text: "You want to update this item!",
                                        icon: 'warning',
                                        showCancelButton: true,
                                        confirmButtonColor: '#3085d6',
                                        cancelButtonColor: '#d33',
                                        confirmButtonText: 'OK'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = link; // Proceed with the link's href
                                        }
                                    });
                                });
                            });
                        });
                    </script>
                    
                   
