    <main class="main-wrap">
       
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p style="color: green;">
                        <%=er%>
                    </p>
                </div>
                <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="/order_view_admin" class="btn btn-primary btn-sm rounded">view order</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                </header> <!-- card-header end// -->
                <div class="table-responsive">

                    <table class="table">
                        <thead>
                            <tr>
                                <th width="40%">IMAGE/NAME</th>
                                <th width="20%">PRICE</th>
                                <th width="20%">QUANTITY</th>
                                <th width="20%">TOTAL</th>
                                <th width="20%">TOTAL AMOUNT</th>

                                <th width="20%">STATUS</th>
                                <th width="20%">CNACEL</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(x=>{%>
                                <tr>
                                    <td>
                                        <a class="itemside" href="#">
                                            <div class="left">
                                                <img src="static/uploads/<%=x.details.product_image[0]%>" width="40"
                                                    height="40" class="img-xs" alt="Item">
                                            </div>
                                            <div class="info">
                                                <%=x.details.product_name%>
                                                    </< /div>
                                        </a>
                                    </td>
                                    <td>
                                        <%=x.details.product_price%>
                                    </td>
                                    <td>
                                        <%=x.quantity%>
                                    </td>
                                    <td>
                                        <%=x.details.product_category%>
                                    </td>
                                    <td>
                                        <%=x.details.product_price * x.quantity %>
                                    </td>
                                    <% if(x.status !="canceled" && x.status !="delivered" ){%>
                                        <td> <a href="#" class="item-action" data-href="/cancel?pid=<%=x.details._id%>&id=<%=datas._id%>&qn=<%=x.quantity%>&wh=0" 
                                            style="border: none; border-radius: 5px; color: white; cursor: pointer; font-size: 14px; padding: 8px 12px; background-color: green;" >CANCEL</a></td>
                                        <%}%>

                                            <% if(x.status=="canceled" ){%>
                                                <td><a href="#" style="border: none;
                                                    border-radius: 5px;
                                                    color: white;
                                                    cursor: pointer;
                                                    font-size: 14px;
                                                    padding: 8px 12px;
                                                   background-color: rgb(11, 213, 220);"  >closed</a>
                                            </td>
                                                <%}%>


                                                    <% if(x.status=="requested" ){%>
                                                        <td> <a href="#" class="item-action" data-href="/approve?pid=<%=x.details._id%>&id=<%=datas._id%>&qn=<%=x.quantity%>"
                                                                style=" border: none;
                                        border-radius: 5px;
                                        color: white;
                                        cursor: pointer;
                                        font-size: 14px;
                                        padding: 8px 12px;
                                       background-color: red;"  >Approve</a></td>
                                                        <%}%>
                                                            <% if(x.status=="approved" ){%>
                                                                <td> <a href="#" class="item-action" data-href="/delivery?pid=<%=x.details._id%>&id=<%=datas._id%>"
                                                                        style=" border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 12px;
       background-color: rgb(77, 195, 18);"  >delivery</a></td>
                                                                <%}%>
                                                                    <% if(x.status=="delivery" ){%>
                                                                        <td> <a href="#" class="item-action" data-href="/delivered?pid=<%=x.details._id%>&id=<%=datas._id%>" 
                                                                                style=" border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 12px;
       background-color: rgb(18, 68, 195);"  onclick="return myFunction('deliveredLink')" >delivered</a></td>
                                                                        <%}%>
                                                                            <% if(x.status=="delivered" ){%>
                                                                                <td> <a href="#" class="item-action" data-href="/delivered?pid=<%=x.details._id%>&id=<%=datas._id%>"
                                                                                        style=" border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 12px;
       background-color: rgb(206, 220, 11);"  >completed</a></td>
                                                                                <%}%>
                                                                                    <% if(x.status=="canceled" ){%>
                                                                                        <td> <a href="#" class="item-action" data-href="#" style=" border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 12px;
       background-color: rgb(11, 213, 220);"  >closed</a></td>
                                                                                        <%}%>

                                </tr>
                                <%})%>
                        </tbody>
                    </table>

                    <div class="card" style="width: 18rem;">
